<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/c3"
                android:orientation="vertical"
                android:paddingTop="@dimen/d22"
                android:paddingBottom="@dimen/d11">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_user_logo" />

                <TextView
                    android:id="@+id/tvAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d8"
                    android:textColor="@color/c333333"
                    android:textSize="@dimen/f16" />

                <TextView
                    android:id="@+id/tvSystemVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="@color/c202239"
                    android:textSize="@dimen/f12" />

                <TextView
                    android:id="@+id/tvDeviceModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/c202239"
                    android:textSize="@dimen/f12" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />

            <RelativeLayout
                android:id="@+id/rlCompanyDesc"
                style="@style/my_layout_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_desc" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/lists_icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />

            <RelativeLayout
                android:id="@+id/rlComment"
                style="@style/my_layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    style="@style/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给个好评" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/lists_icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />

            <RelativeLayout
                android:id="@+id/rlfeedback"
                style="@style/my_layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advice_feedback" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/lists_icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />


            <RelativeLayout
                android:id="@+id/rlServicePhone"
                style="@style/my_layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_phone" />

                <TextView
                    android:id="@+id/tvServicePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/d10"
                    android:textColor="@color/cFF2D7FE6"
                    android:textSize="@dimen/f16" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />

            <RelativeLayout
                android:id="@+id/rlServiceEmail"
                style="@style/my_layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/company_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_email" />

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/d10"
                    android:text="@string/company_email_shmet"
                    android:textColor="@color/c202239"
                    android:textSize="@dimen/f16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:background="@color/cF5F5F5" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/d20"
        android:layout_marginBottom="@dimen/d10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTermsOfService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/Terms_of_service"
                android:textColor="@color/c4F5490"
                android:textSize="@dimen/f11" />
            <TextView
                android:layout_marginLeft="@dimen/d4"
                android:layout_marginRight="@dimen/d4"
                android:id="@+id/tvsPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/privacy"
                android:textColor="@color/c4F5490"
                android:textSize="@dimen/f11" />
            <TextView
                android:id="@+id/tvsTatementOfLaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/statement_of_law"
                android:textColor="@color/c4F5490"
                android:textSize="@dimen/f11" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/declare"
            android:textColor="@color/cBBBBBB"
            android:textSize="@dimen/f11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:text="Copyright © 2000-2020 Guojin"
            android:textColor="@color/cBBBBBB"
            android:textSize="@dimen/f11" />
    </LinearLayout>
</RelativeLayout>