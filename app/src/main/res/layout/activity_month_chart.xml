<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c2A2D4F">

    <RelativeLayout
        android:id="@+id/rlLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottomTab">
        <!--时间 买卖-->
        <include
            android:id="@+id/llRoseSellOrBuy"
            layout="@layout/include_month_kline_datetime_buysell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <View
            android:id="@+id/viewline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_below="@+id/llRoseSellOrBuy"
            android:background="@color/c343657" />
        <!--k线-->
        <include
            android:id="@+id/llMeasurekChartView"
            layout="@layout/layout_measure_kline_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewline"
            android:visibility="gone" />
        <!--分时图-->
        <include
            android:id="@+id/llMeasureMinuteView"
            layout="@layout/layout_alphametal_minute_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewline"
            android:visibility="gone" />
    </RelativeLayout>
    <!--底部-->
    <include
        layout="@layout/include_market_kline_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


    <TextView
        android:id="@+id/tvComputerView"
        android:layout_width="@dimen/d156"
        android:layout_height="@dimen/d50"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_month_computer_data"
        android:gravity="center"
        android:text="@string/month_computer_data"
        android:textColor="@color/cffffff"
        android:textSize="@dimen/f16"
        android:visibility="gone"/>

</RelativeLayout>