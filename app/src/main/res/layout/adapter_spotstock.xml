<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d34"
    android:layout_marginTop="@dimen/d2"
    android:background="@color/c1E3A65"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/d8"
    android:paddingRight="@dimen/d8">

    <com.gjmetal.app.widget.autoText.AutofitTextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center_vertical|left"
        android:textColor="@color/cE7EDF5"
        app:minTextSize="@dimen/d5"
        android:maxLines="1"
        android:textSize="@dimen/f16"
       />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="right"
        android:minWidth="@dimen/d100"
        android:text="0"
        android:textColor="@color/cE7EDF5"
        android:textSize="@dimen/f16"
       />

    <TextView
        android:id="@+id/tvUpDown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/c3EB86A"
        android:textSize="@dimen/f16"
        />
</LinearLayout>
