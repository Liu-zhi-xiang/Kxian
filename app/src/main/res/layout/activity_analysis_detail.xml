<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c2A2D4F"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/c0DFFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d8"
        android:orientation="horizontal">

        <com.gjmetal.app.widget.autoText.AutofitTextView
            android:id="@+id/tvChooseTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingTop="@dimen/d8"
            android:paddingBottom="@dimen/d8"
            android:text="- -"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f16"
            app:minTextSize="@dimen/f8" />

        <View
            android:layout_width="@dimen/d1"
            android:layout_height="match_parent"
            android:background="@color/c0DFFFFFF" />

        <com.gjmetal.app.widget.autoText.AutofitTextView
            android:id="@+id/tvLeftValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingTop="@dimen/d8"
            android:paddingRight="@dimen/d8"
            android:paddingLeft="@dimen/d8"
            android:paddingBottom="@dimen/d8"
            android:text="- -"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f16"
            app:minTextSize="@dimen/f8" />

        <View
            android:layout_width="@dimen/d1"
            android:layout_height="match_parent"
            android:background="@color/c0DFFFFFF" />

        <com.gjmetal.app.widget.autoText.AutofitTextView
            android:id="@+id/tvRightValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:drawableRight="@mipmap/ic_chart_down"
            android:maxLines="1"
            android:paddingLeft="@dimen/d15"
            android:paddingTop="@dimen/d8"
            android:paddingBottom="@dimen/d8"
            android:text="- -"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f16"
            app:minTextSize="@dimen/f8" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/c0DFFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_chart_point_down"
            android:drawablePadding="@dimen/d5"
            android:gravity="center_vertical"
            android:text="@string/txt_today_reduce"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d35"
            android:drawableLeft="@mipmap/ic_chart_point_up"
            android:drawablePadding="@dimen/d5"
            android:gravity="center_vertical"
            android:text="@string/txt_today_add"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f11" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTab"
        android:layout_centerInParent="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSeekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c2A2D4F"
            android:fadeScrollbars="true" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.gjmetal.app.widget.EmptyView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>