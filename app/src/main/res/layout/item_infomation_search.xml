<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:id="@+id/llResultHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/d8"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:text="@string/txt_search_result"
            android:textColor="@color/c202239"
            android:textSize="@dimen/f14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/cE7EDF5" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_bg_selector"
        android:padding="@dimen/d13">
        <TextView
            android:id="@+id/tvSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/c202239"
            android:textSize="@dimen/f16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/d6"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvVip"
                android:layout_width="wrap_content"
                android:text="VIP"
                android:visibility="gone"
                android:paddingHorizontal="@dimen/d2"
                android:textSize="@dimen/f11"
                android:background="@drawable/text_vip_bg"
                android:layout_marginRight="@dimen/d4"
                android:textColor="@color/cF27A68"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/c6A798E"
                android:textSize="@dimen/f12" />
            <TextView
                android:id="@+id/tvInforTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingRight="@dimen/d6"
                android:textColor="@color/c6A798E"
                android:textSize="@dimen/f12" />
        </LinearLayout>
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/cE7EDF5" />
</LinearLayout>