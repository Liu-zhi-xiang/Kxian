<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d300"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_login_bg" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvErrorHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/cF27A68"
                android:gravity="center_horizontal"
                android:padding="@dimen/d5"
                android:textColor="@color/cFFFFFF"
                android:textSize="@dimen/f14"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d20"
                    android:src="@mipmap/login_logo" />
                <!--验证码-->
                <include
                    layout="@layout/layout_login_phone_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d50" />

                <!--重复密码-->
                <include
                    layout="@layout/layout_psw_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d20"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnSure"
                    style="@style/btn_login_style"
                    android:layout_marginTop="@dimen/d20"
                    android:text="@string/submit" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>