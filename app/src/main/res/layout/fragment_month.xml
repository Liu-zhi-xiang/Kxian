<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.alphametal.subtraction.SubtractionFragment">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivMonthAddEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d2"
            android:elevation="@dimen/d5"
            android:src="@drawable/ic_alphametal_add_nor" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/favMagicIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/d40" />
    </RelativeLayout>

    <View
        android:id="@+id/rlLogoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c00000000"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpMeasure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_below="@id/rl"
        android:visibility="visible" />

    <com.gjmetal.app.widget.ApplyReadView
        android:id="@+id/vPermission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:ignore="NotSibling" />

    <com.gjmetal.app.widget.EmptyView
        android:id="@+id/vEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone" />


</RelativeLayout>