<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spot_item_ripper_zixun"
    android:orientation="vertical">
    <!--android:background="@color/c2A2D4F"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/d10"
        android:paddingBottom="@dimen/d10"
        >

        <TextView
            android:id="@+id/tvMarketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d18"
            android:layout_marginRight="@dimen/d18"
            android:layout_toLeftOf="@+id/ivAddChange"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/cE7EDF5"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/ivAddChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d18"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/c0Dffffff" />
</LinearLayout>