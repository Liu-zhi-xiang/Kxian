<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearlayout"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginTop="@dimen/d50"
        android:layout_marginRight="@dimen/d25"
        android:layout_marginBottom="@dimen/d20"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llNewsShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d30"
                    android:paddingTop="@dimen/d15"
                    android:paddingRight="@dimen/d30"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/d2"
                        android:paddingBottom="@dimen/d2">

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:44"
                            android:textColor="@color/c9ba3ae"
                            android:textSize="@dimen/f30" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_toRightOf="@+id/tvTime"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2018/03/18"
                                android:textColor="@color/c9BA3AE"
                                android:textSize="@dimen/f12" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line"
                                android:layout_marginTop="@dimen/d2"
                                android:background="@color/cF5F5F5" />
                        </LinearLayout>


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:src="@mipmap/iv_news_flash_title" />

                    <TextView
                        android:id="@+id/textViewshare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/d10"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="@color/c232629"
                        android:textSize="@dimen/f16" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivFlashImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"></ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cF2F6FA"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@mipmap/iv_news_flash_share_bg_tm" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlKline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c2A2D4F"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d35"
                    android:gravity="center"
                    android:text="铜铝1801"
                    android:textColor="@color/cffffff"
                    android:textSize="@dimen/f14" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:adjustViewBounds="true" />

            </RelativeLayout>


            <include
                layout="@layout/dialog_pictureshare_erweima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cFFFFFFFF"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10">

            <LinearLayout
                android:id="@+id/wexinfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/share_wx_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_wexinfriend"
                    android:textColor="#333333"
                    android:textSize="@dimen/f14" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/wexinfriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/share_wx_friends_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_wexinfriends"
                    android:textColor="#333333"
                    android:textSize="@dimen/f14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/qqfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/share_qq_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_qqfriend"
                    android:textColor="#333333"
                    android:textSize="@dimen/f14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sinwebo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/share_sina_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_sinweibo"
                    android:textColor="#333333"
                    android:textSize="@dimen/f14" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/share_cancel_selector"
            android:gravity="center"
            android:paddingTop="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:text="@string/txt_cancel"
            android:textColor="#333333"
            android:textSize="@dimen/f16" />
    </LinearLayout>


</RelativeLayout>