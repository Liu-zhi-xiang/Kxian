<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cffffff"
    android:orientation="vertical">

    <!--<com.gjmetal.app.widget.Titlebar-->
        <!--android:id="@+id/titleBar"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:visibility="visible"-->
        <!--android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cE7EDF5">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/flashMagicIndicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivAddSub" />

        <ImageView
            android:id="@+id/ivAddSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_img_bg"
            android:src="@drawable/btn_add_tag_selector" />

    </RelativeLayout>

    <com.gjmetal.app.widget.MyViewPager
        android:id="@+id/vpFlash"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/cffffff" />

    <com.gjmetal.app.widget.EmptyView
        android:id="@+id/vEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/cffffff"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>