<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.gjmetal.app.widget.Titlebar
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />
    <com.gjmetal.app.widget.ControlScrollViewPager
        android:id="@+id/vpHelper"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

    <com.gjmetal.app.widget.EmptyView
        android:id="@+id/vEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/viewTab"
        android:layout_gravity="center"
        android:background="@color/c2A2D4F"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>