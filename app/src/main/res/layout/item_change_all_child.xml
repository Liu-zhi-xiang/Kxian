<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlChoose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="@dimen/d10"
        android:src="@mipmap/ic_chart_warn_delete_nor" />

    <TextView
        android:id="@+id/tvMarketName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/ivMarketToTop"
        android:layout_toRightOf="@+id/ivDelete"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/c3"
        android:textSize="@dimen/f16" />

    <ImageView
        android:id="@+id/ivMarketToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d10"
        android:layout_toLeftOf="@+id/ivMarketScoll"
        android:padding="@dimen/d10"
        android:src="@mipmap/edit_button_top" />

    <ImageView
        android:id="@+id/ivMarketScoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/d10"
        android:src="@mipmap/edit_button_drag" />
</RelativeLayout>