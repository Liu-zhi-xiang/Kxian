<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/d2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvVip"
            android:layout_width="wrap_content"
            android:text="VIP"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/d2"
            android:textSize="@dimen/f11"
            android:background="@drawable/text_vip_bg"
            android:layout_marginRight="@dimen/d4"
            android:layout_gravity="center_vertical"
            android:textColor="@color/cF27A68"
            android:layout_height="@dimen/d14" />
        <TextView
            android:id="@+id/tv_yuan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f12"
            tools:text="国金金属" />

        <TextView
            android:id="@+id/tv_yuan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:textColor="@color/c9EB2CD"
            android:textSize="@dimen/f12"
            tools:text="12分钟前" />

        <LinearLayout
            android:id="@+id/llCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="@dimen/d30"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/image_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_news_star_nor" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cE7EDF5" />
</LinearLayout>