<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d44">
    <!--左边按钮-->
    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d5"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/nav_button_back"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/c3"
            android:textSize="@dimen/f16"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="gone" />

            <View
                android:id="@+id/view_shot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginRight="@dimen/d10"
                android:background="@drawable/red_shap_dian"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
    <!--中间title-->
    <com.gjmetal.app.widget.autoText.AutofitTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d80"
        android:layout_marginRight="@dimen/d80"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        app:minTextSize="@dimen/f8"
        android:textColor="@color/cFFFFFF"
        android:textSize="@dimen/f20"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivCener"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/login_logo"
        android:ellipsize="end"
        android:gravity="center"
        android:visibility="gone" />
    <!--搜索-->
    <com.gjmetal.app.widget.TitleSearchView
        android:id="@+id/titleSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rightLayout"
        android:layout_toRightOf="@+id/leftLayout"
        android:visibility="gone" />
    <!--行情-->
    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/marketMagicIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d28"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/leftLayout"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone" />


    <RadioGroup
        android:id="@+id/rgLMEView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/d27"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbMeasure"
            android:layout_width="0dp"
            android:layout_height="@dimen/d28"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selecter_alphametal_tab"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/alphaMeasure"
            android:textColor="@color/c25345B"
            android:textSize="@dimen/f16" />

        <RadioButton
            android:id="@+id/rbLem"
            android:layout_width="0dp"
            android:layout_height="@dimen/d28"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@drawable/selecter_alphametal_tab"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="@string/alphaLme"
            android:textColor="@color/cFFFFFF"
            android:textSize="@dimen/f16" />

        <RadioButton
            android:id="@+id/rbComputer"
            android:layout_width="0dp"
            android:layout_height="@dimen/d28"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d5"
            android:layout_weight="1"
            android:background="@drawable/selecter_alphametal_tab"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="@string/alphaConputer"
            android:textColor="@color/cFFFFFF"
            android:textSize="@dimen/f16" />

    </RadioGroup>


    <LinearLayout
        android:id="@+id/llTabMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivUpMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_navbar_left_nor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTabTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:gravity="center"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/f18" />

        <ImageView
            android:id="@+id/ivNextMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_navbar_right_nor"
            android:visibility="gone" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rgView"
        style="@style/unit_group_excel"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbFuture"
            style="@style/future_rb_excel"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/tab_left_selector"
            android:checked="true"
            android:text="@string/future_goods" />

        <RadioButton
            android:id="@+id/rbSpot"
            style="@style/future_rb_excel"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/tab_right_selector"
            android:checked="false"
            android:text="@string/spot_goods" />

    </RadioGroup>


    <RadioGroup
        android:id="@+id/rgFlash"
        style="@style/unit_group_excel"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rbFlash"
            style="@style/flash_tab_radiobutton"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:checked="true"
            android:text="@string/menu_main_flash" />

        <RadioButton
            android:id="@+id/rbCalendar"
            style="@style/flash_tab_radiobutton"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:checked="false"
            android:text="@string/menu_date" />

    </RadioGroup>

    <!--右边按钮-->
    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/d5"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center|right"
            android:text="保存"
            android:textColor="@color/c3"
            android:textSize="@dimen/f16"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/ivThreeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivSecondRight"
            android:layout_marginRight="@dimen/d20"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/ivSecondRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivRight"
            android:layout_marginRight="@dimen/d20"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvSocketHint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d24"
        android:gravity="center"
        android:textColor="@color/chart_white"
        android:visibility="gone" />
</LinearLayout>