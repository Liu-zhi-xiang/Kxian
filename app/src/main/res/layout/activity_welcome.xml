<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ivBottom"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/d20"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d20"
            android:src="@mipmap/ic_welcome_bottom" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/d40"
        android:layout_marginRight="@dimen/d20"
        android:alpha="0.3"
        android:background="@drawable/coner_home_next_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/d8"
        android:paddingTop="@dimen/d5"
        android:paddingRight="@dimen/d8"
        android:paddingBottom="@dimen/d5"
        android:text="@string/txt_home_next"
        android:textColor="@color/c3"
        android:textSize="@dimen/f14" />


</RelativeLayout>