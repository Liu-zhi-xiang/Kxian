<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c3"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d300"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_login_bg" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtNewRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvLoginHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/cF27A68"
                android:gravity="center_horizontal"
                android:padding="@dimen/d5"
                android:textColor="@color/cFFFFFF"
                android:textSize="@dimen/f14"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d30"
                android:src="@mipmap/login_logo" />


            <!--验证码登录-->
            <include
                layout="@layout/layout_login_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginTop="@dimen/d50"
                android:layout_marginRight="@dimen/d20" />
            <!--密码登录-->
            <include
                android:id="@+id/vPswLogin"
                layout="@layout/layout_psw_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:visibility="visible" />

            <!--图片验证码-->
            <include
                android:id="@+id/viewPswErrorCode"
                layout="@layout/layout_pswerror_image_code"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btnLogin"
                style="@style/btn_login_style"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginTop="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:text="@string/txt_btn_login" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPswLogin"
                    style="@style/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d20"
                    android:text="@string/txt_code_login" />

                <TextView
                    android:id="@+id/txtForgetPassWorld"
                    style="@style/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/d20"
                    android:text="@string/txt_forget_psw" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtNewRegister"
        android:textColor="@color/c202239"
        android:textSize="@dimen/f14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginBottom="@dimen/d90"
        android:gravity="center"
        android:minHeight="@dimen/d40"
        android:text="@string/txt_new_register" />


</RelativeLayout>