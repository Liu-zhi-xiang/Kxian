<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_input_nor"
    android:orientation="vertical"
    android:visibility="gone">
    <!--验证码登录-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSendImageCode"
            android:layout_width="@dimen/d88"
            android:layout_height="@dimen/d45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/d1"
            android:layout_marginRight="@dimen/d2"
            android:layout_marginBottom="@dimen/d1"
            android:gravity="center_vertical"
            android:scaleType="fitXY" />

        <com.gjmetal.app.widget.ClearEditText
            android:id="@+id/etSendImageCode"
            style="@style/login_et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d10"
            android:layout_toLeftOf="@+id/ivSendImageCode"
            android:background="@color/transparent"
            android:hint="@string/txt_input_img_code"
            android:inputType="text"
            android:minHeight="@dimen/d50" />
    </RelativeLayout>
</LinearLayout>