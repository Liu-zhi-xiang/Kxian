<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.alphametal.measure.MeasureFragment">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:gravity="center_vertical"
        android:visibility="visible">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/favMagicIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:id="@+id/rlLogoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c00000000"></View>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpMeasure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <com.gjmetal.app.widget.ApplyReadView
        android:id="@+id/vPermission"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.gjmetal.app.widget.EmptyView
        android:id="@+id/vEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTab"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone" />

</RelativeLayout>