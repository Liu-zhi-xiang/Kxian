<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/d3"
        android:paddingRight="@dimen/d15"
        android:paddingBottom="@dimen/d3">

        <ImageView
            android:id="@+id/ivSlected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_global_line"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:orientation="vertical">

            <com.gjmetal.app.widget.autoText.AutofitTextView
                android:id="@+id/tvItemContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/cFFFFFF"
                android:gravity="left"
                android:textSize="@dimen/f16"
                autofit:minTextSize="@dimen/f8" />

            <com.gjmetal.app.widget.autoText.AutofitTextView
                android:id="@+id/tvContactType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="@color/c9EB2CD"
                android:textSize="@dimen/f11"
                autofit:minTextSize="@dimen/f8" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>