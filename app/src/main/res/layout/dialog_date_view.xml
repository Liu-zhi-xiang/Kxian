<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="253dp"
    android:background="@color/cFFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_cancel"
            android:textColor="@color/cBBBBBB"
            android:textSize="@dimen/f17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/dialog_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_complete"
            android:textColor="@color/c4A90E2"
            android:textSize="@dimen/f17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <com.weigan.loopview.LoopView
            android:id="@+id/loopview_start_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:awv_centerTextColor="@color/c000000"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_outerTextColor="@color/cBBBBBB"
            app:awv_textsize="18" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loopview_start_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:awv_centerTextColor="@color/c000000"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_outerTextColor="@color/cBBBBBB"
            app:awv_textsize="18" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loopview_start_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:awv_centerTextColor="@color/c000000"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_outerTextColor="@color/cBBBBBB"
            app:awv_textsize="18" />
    </LinearLayout>

</LinearLayout>