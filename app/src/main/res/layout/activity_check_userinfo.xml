<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF5F5F5"
    android:orientation="vertical">


    <RelativeLayout style="@style/my_layout_item">

        <TextView
            android:id="@+id/txtMembersId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/txt_membersId"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <TextView
            android:id="@+id/tvMembersId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d10"
            android:layout_toLeftOf="@+id/ivMembersIdRight"
            android:layout_toRightOf="@+id/txtMembersId"
            android:ellipsize="end"
            android:gravity="right|center"
            android:maxLines="1"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/ivMembersIdRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/lists_icon_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/cE7EDF5" />
    <LinearLayout
        android:id="@+id/linear_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cFFFFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d24"
        android:paddingTop="@dimen/d8"
        android:paddingRight="@dimen/d10"
        android:paddingBottom="@dimen/d10">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/head"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <com.gjmetal.app.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/lists_icon_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/cE7EDF5" />

    <RelativeLayout
        android:id="@+id/linear_name"
        style="@style/my_layout_item">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/name"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d10"
            android:layout_toLeftOf="@+id/ivRight"
            android:layout_toRightOf="@+id/txtName"
            android:ellipsize="end"
            android:gravity="right|center"
            android:maxLines="1"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lists_icon_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/cE7EDF5" />

    <RelativeLayout
        android:id="@+id/linear_phone"
        style="@style/my_layout_item">

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d10"
            android:layout_toLeftOf="@+id/ivNext"
            android:layout_toRightOf="@+id/txtPhone"
            android:gravity="right|center"
            android:maxLines="1"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lists_icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear_update"
        style="@style/my_layout_item"
        android:layout_marginTop="@dimen/d20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/c333333"
            android:textSize="@dimen/f16" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/lists_icon_right" />
    </RelativeLayout>
</LinearLayout>